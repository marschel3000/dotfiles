[user]
	name = [foo]
	email = [bar]
	signingkey = [xxx]

[alias]
	br = branch
	co = checkout
	st = status
	ci = commit
	aa = add --all
	pp = !git pull && git push

	logg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	logs = log --show-signature
	unstage = reset HEAD --
	last = log -1 HEAD

	diffdev = diff develop..HEAD --name-status

	intdev = merge --ff -m 'Merged develop' develop

[core]
	filemode = false
	autocrlf = input
	editor = vim
	excludesfile = ~/.gitignore

[commit]
	gpgsign = true
	gpgSign = true # smartgit?
[push]
	default = simple
[pull]
	rebase = true
[branch]
	autosetuprebase = never
[log]
	decorate = auto
[color]
	ui = true
[gc]
	autoDetach = false
[gpg]
	program = gpg2
[grep]
	lineNumber = true

[mergetool]
	keepBackup = false
